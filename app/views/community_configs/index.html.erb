<p id="notice"><%= notice %></p>

<h1>Community Configs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>About</th>
      <th>Backgroundone</th>
      <th>Backgroundtwo</th>
      <th>Backgroundthree</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @community_configs.each do |community_config| %>
      <tr>
        <td><%= community_config.name %></td>
        <td><%= community_config.description %></td>
        <td><%= community_config.about %></td>
        <td><%= community_config.backgroundOne %></td>
        <td><%= community_config.backgroundTwo %></td>
        <td><%= community_config.backgroundThree %></td>
        <td><%= image_tag community_config.logo.url(:thumb) %></td>
        <td><%= link_to 'Show', community_config %></td>
        <td><%= link_to 'Edit', edit_community_config_path(community_config) %></td>
        <td><%= link_to 'Destroy', community_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Community Config', new_community_config_path %>
