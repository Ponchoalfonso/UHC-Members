<p id="notice"><%= notice %></p>

<h1>Recents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Author</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recents.each do |recent| %>
      <tr>
        <td><%= recent.title %></td>
        <td><%= recent.body %></td>
        <td><%= recent.author %></td>
        <td><%= image_tag recent.photo.url(:thumb) %></td>
        <td><%= link_to 'Show', recent %></td>
        <td><%= link_to 'Edit', edit_recent_path(recent) %></td>
        <td><%= link_to 'Destroy', recent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recent', new_recent_path %>
