<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Nickname</th>
      <th>Minecraftuuid</th>
      <th>Foundus</th>
      <th>Requestreason</th>
      <th>Email</th>
      <th>Status</th>
      <th>Ip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.age %></td>
        <td><%= request.nickname %></td>
        <td><%= request.minecraftUUID %></td>
        <td><%= request.foundUs %></td>
        <td><%= request.requestReason %></td>
        <td><%= request.email %></td>
        <td><%= request.status %></td>
        <td><%= request.ip %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

