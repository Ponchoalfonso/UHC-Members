.homepage{
  color: #fff;
}

/* * * * * * * * * * * * * * *
*  Seección de presentación  *
* * * * * * * * * * * * * * */

.presentation{
  height: 100vh;
  background: url(<%= asset_path 'Back-Ground.png' %>);
  background-position:50% 50%;
  background-size:cover;
  background-attachment: fixed;
}

.presentation-content{
  padding-top: 25vh;
}

.title{
  width: 50%;
  margin: auto;
  text-align: center;
}

.title h1{
  margin: auto;
  border-top: 2px solid white;
  border-bottom: 2px solid white;
  padding-top: 0.45em;
  padding-bottom: 0.45em;
  width: 55%;
}

.description{
  width: 25%;
  margin: auto;
  margin-top: 2%;
  text-align: center;
  font-size: 1.2em;
  line-height: 1.4em;
}

.button-space{
  margin-top: 6em;
}

.button-space .button{
  margin: auto;
  display: table;
  -webkit-transition: all 300ms ease;
  -o-transition: all 300ms ease;
  transition: all 300ms ease;
  background-color: #da4726;
}

.button-space .button:hover{
  -webkit-transition: all 300ms ease;
  -o-transition: all 300ms ease;
  transition: all 300ms ease;
  background-color: #d95d41;
}

/* * * * * * * * * * * * * * * *
*  Seección acerca de nosotros *
* * * * * * * * * * * * * * * */

.about{
  background-color: #d6521a;
  padding-top: 1em;
}

.about .container img{
  border-top: dotted 4px rgba(0, 0, 0, 0.125);
  width: 50%;
}

/* * * * * * * * * * * * * *
*  Seección de onformación *
* * * * * * * * * * * * * */

.at-right{
  right: 0%;
}

.at-left{
  left: 0%;
}

.info{
  z-index: -1;
  height: 100vh;
  position: relative;
}

.info-container{
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  width: 40%;
  padding: 1em;
}

.info-container h4{
  font-size: 1.5em;
  border-bottom: solid 2px;
  width: 90%;
  margin: auto;
  padding-bottom: 0.6em;
  border-color: rgba(0, 0, 0, 0.125);
}

.info-container p{
  text-align: justify;
  padding-top: 1.5em;
  line-height: 1.5em;
  color: rgba(255, 255, 255, 0.8);
}

.info-container .info-phrase{
  font-weight: 700;
}

.info-container a{
  margin-top: 3em;
}

.info-background-1{
  background: url(<%= asset_path 'Back-Ground-2.png' %>);
  background-position:50% 50%;
  background-size:cover;
  background-attachment: fixed;
}

.info-color-1{
  background-color: #9e1717;
  border-color: rgba(0, 0, 0, 0.125);
}

.info-color-1 a{
  -webkit-transition: all 300ms ease;
  -o-transition: all 300ms ease;
  transition: all 300ms ease;
  background-color: #1baaaa;
  color: white;
}

.info-color-1 a:hover{
  -webkit-transition: all 300ms ease;
  -o-transition: all 300ms ease;
  transition: all 300ms ease;
  background-color: #59b8b8;
  color: white;
}

.info-background-2{
  background: url(<%= asset_path 'Back-Ground-3.png' %>);
  background-position:50% 50%;
  background-size:cover;
  background-attachment: fixed;
}

.info-color-2{
  background-color: #c38125;
  border-color: rgba(0, 0, 0, 0.125);
}

.info-color-2 a{
  -webkit-transition: all 300ms ease;
  -o-transition: all 300ms ease;
  transition: all 300ms ease;
  background-color: #bf6037;
  color: white;
}

.info-color-2 a:hover{
  -webkit-transition: all 300ms ease;
  -o-transition: all 300ms ease;
  transition: all 300ms ease;
  background-color: #c47350;
  color: white;
}

.fast-news{
  text-align: justify;
}

.fast-news .news-container-right{
  padding: 2em;
  background-color: #2c2d37;
  height: 60vh;
}

.fast-news .news-container-left{
  padding: 2em;
  background-color: #1e2030;
  height: 60vh;
}

.fast-news .news-content .news-title{
  font-size: 1.2em;
  padding: 1em;
}

.fast-news .news-content p{
  padding: 1em;
  font-size: 0.9em;
}

.fast-news .news-content .author{
  font-size: 1em;
  padding: 1em;
  padding-top: 5em;
}

.fast-news .news-content img{
  height: 60vh;
  width: 30%;
}
